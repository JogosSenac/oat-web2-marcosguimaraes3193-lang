@model IEnumerable<projetodotnnett.Models.Movimentacao>

@{
    Layout = "_Layout";
}

<h2 class="text-center fw-bold mb-4">Movimentações do Estoque</h2>

<div class="d-flex justify-content-center">
    <div class="card card-custom shadow-lg border-0 p-4"
         style="max-width: 950px; width: 100%; border-radius: 18px;">

        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="fw-semibold">Produto</th>
                    <th class="fw-semibold">Tipo</th>
                    <th class="fw-semibold">Data</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td class="fw-medium">@m.ProdutoNome</td>

                        <td>
                            @if (m.Tipo == "Entrada")
                            {
                                <span class="badge bg-success px-3 py-2">Entrada</span>
                            }
                            else if (m.Tipo == "Atualização")
                            {
                                <span class="badge bg-warning px-3 py-2 text-dark">Alteração</span>
                            }
                            else
                            {
                                <span class="badge bg-danger px-3 py-2">Saída</span>
                            }
                        </td>

                        <td>@m.Data.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
