@model IEnumerable<projetodotnnett.Models.Movimentacao>

<h2 class="mb-4">Movimentações do Estoque</h2>

<div class="card card-custom">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Tipo</th>
                <th>Data</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.ProdutoNome</td>
                    <td>
                        @if (m.Tipo == "Entrada")
                        {
                            <span class="badge bg-success">Entrada</span>
                        }
                        else if (m.Tipo == "Atualização")
                        {
                            <span class="badge bg-warning">Alteração</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Saída</span>
                        }
                    </td>
                    <td>@m.Data.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
