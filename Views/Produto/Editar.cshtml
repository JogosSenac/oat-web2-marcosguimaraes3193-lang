@model projetodotnnett.Models.Produto

<h2 class="mb-4">Editar Produto</h2>

<div class="card shadow-sm p-4">

    <form method="post">

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" name="Nome" class="form-control" value="@Model.Nome" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Quantidade</label>
            <input type="number" name="Quantidade" class="form-control" value="@Model.Quantidade" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Preço</label>
            <input type="number" step="0.01" name="Preco" class="form-control" value="@Model.Preco" required />
        </div>

        <button class="btn btn-warning">Salvar Alterações</button>
        <a href="/Produto/Index" class="btn btn-secondary">Cancelar</a>
    </form>

</div>
