@model projetodotnnett.Models.Produto

@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-lg border-0 p-4 card-custom" style="max-width: 550px; width: 100%; border-radius: 18px;">
        
        <h2 class="text-center mb-4 fw-bold">Editar Produto</h2>

        <form method="post">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label fw-semibold">Nome</label>
                <input type="text" name="Nome" class="form-control" value="@Model.Nome" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Quantidade</label>
                <input type="number" name="Quantidade" class="form-control" value="@Model.Quantidade" required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Preço</label>
                <input type="number" step="0.01" name="Preco" class="form-control" value="@Model.Preco" required />
            </div>

            <div class="d-flex justify-content-between">
                <a href="/Produto/Index" class="btn btn-secondary px-4">Cancelar</a>
                <button class="btn btn-warning px-4 fw-semibold text-dark">Salvar Alterações</button>
            </div>

        </form>

    </div>
</div>
