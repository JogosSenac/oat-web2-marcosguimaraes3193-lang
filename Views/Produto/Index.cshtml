@model List<projetodotnnett.Models.Produto>

<h2 class="mb-4">Produtos</h2>

<a href="/Produto/Criar" class="btn btn-success mb-3">+ Novo Produto</a>

<div class="card shadow-sm p-3">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Nome</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th class="text-center" style="width: 200px;">Ações</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Quantidade</td>
                    <td>R$ @p.Preco</td>

                    <td class="text-center">
                        <a class="btn btn-warning btn-sm" href="/Produto/Editar/@p.Id">Editar</a>
                        <a class="btn btn-danger btn-sm" href="/Produto/Excluir/@p.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-3">Nenhum produto cadastrado ainda.</div>
    }
</div>
