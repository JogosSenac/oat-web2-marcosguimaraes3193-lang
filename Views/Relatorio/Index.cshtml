@{
    ViewData["Title"] = "Relatórios";
}

<h2 class="text-center fw-bold mb-4">Relatórios do Estoque</h2>

<div class="d-flex justify-content-center">
    <div style="max-width: 1100px; width: 100%;">

        <div class="row g-4">

            <!-- Card 1 -->
            <div class="col-md-6">
                <div class="card card-custom shadow-lg border-0 p-4 text-center"
                     style="border-radius: 18px;">
                    <h5 class="fw-semibold text-secondary">Total de Itens Cadastrados</h5>
                    <h2 class="text-primary fw-bold mt-2">@ViewBag.TotalItens</h2>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-6">
                <div class="card card-custom shadow-lg border-0 p-4 text-center"
                     style="border-radius: 18px;">
                    <h5 class="fw-semibold text-secondary">Valor Total do Estoque</h5>
                    <h2 class="fw-bold mt-2 text-success">
                        R$ @ViewBag.ValorTotal.ToString("N2").Replace(".", ",")
                    </h2>
                </div>
            </div>

        </div>

    </div>
</div>
