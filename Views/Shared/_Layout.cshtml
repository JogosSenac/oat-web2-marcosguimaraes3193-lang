<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ProjetoDotnnett</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <style>
        body {
            background: #f5f6fa;
        }

        .navbar-custom {
            background: #4c6ef5;
        }
        .navbar-custom a {
            color: white !important;
            font-weight: 600;
        }

        .card-custom {
            border-radius: 14px;
            padding: 25px;
            box-shadow: 0 4px 10px rgba(0,0,0,.08);
        }

        .btn-primary {
            background: #4c6ef5;
            border: none;
        }
        .btn-primary:hover {
            background: #3b5bdb;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                ProjetoDotnnett
            </a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produto" asp-action="Index">Produtos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuario" asp-action="Logout">Sair</a>
                        </li>
                        <li class="nav-item">
    <a class="nav-link" asp-controller="Movimentacao" asp-action="Index">Movimentações</a>
</li>

                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
