<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Gerenciador de estoque</title>

    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>

        /* Fundo da página */
        body {
            background: #f2f4f8;
        }

        /* Navbar */
        .navbar-custom {
            background: #4c6ef5;
        }

        .navbar-custom a {
            color: white !important;
            font-weight: 600;
        }

        /* CARD PADRÃO DO SISTEMA */
        .custom-card {
            background: #fff;
            border-radius: 18px;
            padding: 35px;
            max-width: 900px;
            margin: 40px auto;
            box-shadow: 
                0 15px 35px rgba(0,0,0,0.1),
                0 5px 15px rgba(0,0,0,0.05);
            transition: 0.2s ease-in-out;
        }

        .custom-card:hover {
            transform: translateY(-3px);
            box-shadow:
                0 18px 40px rgba(0,0,0,0.12),
                0 8px 18px rgba(0,0,0,0.06);
        }

        h2, h3 {
            color: #2c3e50;
            font-weight: 700;
        }

        /* Botões */
        .btn-primary {
            background: #4c6ef5;
            border: none;
        }

        .btn-primary:hover {
            background: #3b5bdb;
        }

        .btn-secondary {
            background: #6c757d;
            border: none;
        }

        .btn-secondary:hover {
            background: #5a6268;
        }

    </style>

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                Gerenciador de Estoque
            </a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produto" asp-action="Index">Produtos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movimentacao" asp-action="Index">Movimentações</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuario" asp-action="Logout">Sair</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
